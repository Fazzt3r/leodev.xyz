<!doctype html>
<html lang="en">
<head>
    {{> head}}
    <title>About {{author.name}}</title>
</head>
<body class="text-black bg-white dark:text-white dark:bg-gray-800 overscroll-none">
    {{> header}}
    <div class="px-1 md:px-2 h-[calc(100vh-1.5rem)] overflow-auto">
        <div class="my-8 flex flex-wrap md:flex-nowrap">
            <div class="w-full md:w-[30%] lg:w-[20%]">
                <img class="w-[20%] inline-block md:w-full md:block rounded-full" src="{{author.avatar.src}}" width="{{author.avatar.width}}" height="{{author.avatar.height}}">
                <span class="font-semibold text-2xl ml-2 md:mt-4 md:mb-2 md:text-center md:block ">{{author.name}}</span>
                <table>
                    {{#each author.accounts}}
                    <tr class="mt-4">
                        <td class="w-16 h-16">
                            {{#if image}}
                            <img class="w-full h-full rounded" src="{{image.src}}" width="{{image.width}}" height="{{image.height}}">
                            {{else}}
                            <div></div>
                            {{/if}}
                        </td>

                        <td class="pl-2">
                            <p class="text-sm">{{name}}: </p>
                            {{#if link}}
                            <a class="text-blue-600 dark:text-blue-400" href="{{link}}">{{label}}</a>
                            {{else}}
                            {{label}}
                            {{/if}}
                        </td>
                    </tr>
                    {{/each}}
                </table>
            </div>
            <div class="w-full border-t-4 md:border-t-0 md:border-l-4 md:ml-4 md:pl-4 boarder-gray-800 dark:border-gray-900">
                {{#include_markdown file=description}}
                {{/include_markdown}}
            </div>
        </div>

        {{> footer}}
    </div>
</body>
</html>